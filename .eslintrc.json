{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "webextensions": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "off",
        "object-curly-newline": "off",
        "react/jsx-first-prop-new-line": "off",
        "@typescript-eslint/space-before-blocks": "off" // TODO
    }
}
